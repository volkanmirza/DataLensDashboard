@model DataLens.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-key mr-2"></i>Şifre Değiştir</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Profil</a></li>
                    <li class="breadcrumb-item active">Şifre Değiştir</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-check"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-ban"></i> @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-light card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-key mr-2"></i>Şifre Değiştir</h3>
                    </div>
                    <form asp-action="ChangePassword" method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CurrentPassword" class="control-label">
                                            <i class="fas fa-lock mr-2"></i>Mevcut Şifre
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
                                            </div>
                                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Mevcut şifrenizi girin" />
                                        </div>
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="callout callout-warning">
                                        <h6><i class="fas fa-exclamation-triangle"></i> Güvenlik Uyarısı</h6>
                                        <p class="mb-0">Şifrenizi değiştirdikten sonra tüm cihazlardan çıkış yapmanız gerekebilir.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label">
                                    <i class="fas fa-key mr-2"></i>Yeni Şifre
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <div class="callout callout-info mt-2">
                                    <h6><i class="fas fa-info-circle"></i> Şifre Gereksinimleri:</h6>
                                    <ul class="mb-0">
                                        <li>En az 6 karakter uzunluğunda olmalı</li>
                                        <li>En az bir büyük harf içermeli</li>
                                        <li>En az bir küçük harf içermeli</li>
                                        <li>En az bir rakam içermeli</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label">
                                    <i class="fas fa-check-double mr-2"></i>Yeni Şifre Tekrar
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer bg-light">
                            <button type="submit" class="btn btn-light btn-lg">
                                <i class="fas fa-save mr-2"></i>Şifreyi Değiştir
                            </button>
                            <a asp-action="Index" asp-controller="Profile" class="btn btn-secondary">
                                <i class="fas fa-times mr-2"></i>İptal
                            </a>
                            <div class="float-right">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt mr-1"></i>
                                    Güvenli bağlantı ile korunmaktadır
                                </small>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}