@model List<DataLens.Models.NotificationViewModel>
@{
    ViewData["Title"] = "Bildirimler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Error"]
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bildirim Listesi</h3>
                            <div class="card-tools">
                                <a href="@Url.Action("Preferences", "Notification")" class="btn btn-tool">
                                    <i class="fas fa-cog"></i> Bildirim Ayarları
                                </a>
                                @if (Model.Any(n => !n.IsRead))
                                {
                                    <a href="@Url.Action("MarkAllAsRead", "Notification")" class="btn btn-tool">
                                        <i class="fas fa-check"></i> Tümünü Okundu İşaretle
                                    </a>
                                }
                            </div>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.Any())
                            {
                                <div class="table-responsive mailbox-messages">
                                    <table class="table table-hover table-striped">
                                        <tbody>
                                            @foreach (var notification in Model.OrderByDescending(n => n.CreatedDate))
                                            {
                                                <tr class="@(!notification.IsRead ? "unread" : "")">
                                                    <td class="mailbox-star">
                                                        @if (notification.Type == "Info")
                                                        {
                                                            <i class="fas fa-info-circle text-blue"></i>
                                                        }
                                                        else if (notification.Type == "Warning")
                                                        {
                                                            <i class="fas fa-exclamation-triangle text-yellow"></i>
                                                        }
                                                        else if (notification.Type == "Error")
                                                        {
                                                            <i class="fas fa-times-circle text-red"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fas fa-bell text-green"></i>
                                                        }
                                                    </td>
                                                    <td class="mailbox-name">
                                                        <strong>@notification.Title</strong>
                                                    </td>
                                                    <td class="mailbox-subject">
                                                        @notification.Message
                                                    </td>
                                                    <td class="mailbox-attachment"></td>
                                                    <td class="mailbox-date">@notification.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                    <td class="mailbox-actions">
                                                        @if (!notification.IsRead)
                                                        {
                                                            <a href="@Url.Action("MarkAsRead", "Notification", new { id = notification.Id })" class="btn btn-default btn-sm" title="Okundu İşaretle">
                                                                <i class="fas fa-check"></i>
                                                            </a>
                                                        }
                                                        <a href="@Url.Action("Delete", "Notification", new { id = notification.Id })" class="btn btn-default btn-sm" title="Sil" onclick="return confirm('Bu bildirimi silmek istediğinizden emin misiniz?')">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-4">
                                    <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                                    <h4 class="text-muted">Henüz bildiriminiz yok</h4>
                                    <p class="text-muted">Yeni bildirimler burada görünecektir.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.unread {
    background-color: #f8f9fa;
    font-weight: bold;
}

.mailbox-messages tr:hover {
    background-color: #f5f5f5;
}
</style>