@model DataLens.Areas.Profile.Models.PrivacySettingsViewModel
@{
    ViewData["Title"] = "Gizlilik Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Profil</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Settings")">Ayarlar</a></li>
                    <li class="breadcrumb-item active">Gizlilik</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Başarılı!</h5>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Hata!</h5>
                @TempData["Error"]
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-info"></i> Bilgi!</h5>
                @TempData["Info"]
            </div>
        }

        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Gizlilik ve Güvenlik Ayarları</h3>
                    </div>
                    <form asp-action="Privacy" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="UpdatedDate" />
                        
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5>Profil Gizliliği</h5>
                                    <hr>
                                    
                                    <div class="form-group">
                                        <label asp-for="ProfileVisibility"></label>
                                        <select asp-for="ProfileVisibility" class="form-control">
                                            <option value="0">Özel - Sadece ben görebilirim</option>
                                            <option value="1">Takım - Takım üyeleri görebilir</option>
                                            <option value="2">Organizasyon - Organizasyon üyeleri görebilir</option>
                                            <option value="3">Herkese Açık - Herkes görebilir</option>
                                        </select>
                                        <small class="form-text text-muted">Profilinizin kim tarafından görülebileceğini belirler.</small>
                                    </div>
                                    
                                    <h5 class="mt-4">Paylaşım İzinleri</h5>
                                    <hr>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="AllowDashboardSharing" id="allowDashboardSharing">
                                            <label class="custom-control-label" for="allowDashboardSharing" asp-for="AllowDashboardSharing"></label>
                                        </div>
                                        <small class="form-text text-muted">Dashboard'larınızın başkalarıyla paylaşılmasına izin verin.</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="AllowThirdPartyIntegrations" id="allowThirdPartyIntegrations">
                                            <label class="custom-control-label" for="allowThirdPartyIntegrations" asp-for="AllowThirdPartyIntegrations"></label>
                                        </div>
                                        <small class="form-text text-muted">Üçüncü taraf uygulamaların verilerinize erişmesine izin verin.</small>
                                    </div>
                                    
                                    <h5 class="mt-4">Veri Takibi</h5>
                                    <hr>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="AllowActivityTracking" id="allowActivityTracking">
                                            <label class="custom-control-label" for="allowActivityTracking" asp-for="AllowActivityTracking"></label>
                                        </div>
                                        <small class="form-text text-muted">Aktivitelerinizin takip edilmesine izin verin.</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="AllowUsageAnalytics" id="allowUsageAnalytics">
                                            <label class="custom-control-label" for="allowUsageAnalytics" asp-for="AllowUsageAnalytics"></label>
                                        </div>
                                        <small class="form-text text-muted">Kullanım analizleri için veri toplanmasına izin verin.</small>
                                    </div>
                                    
                                    <h5 class="mt-4">Veri Saklama</h5>
                                    <hr>
                                    
                                    <div class="form-group">
                                        <label asp-for="DataRetentionDays"></label>
                                        <input type="number" class="form-control" asp-for="DataRetentionDays" min="30" max="365">
                                        <span asp-validation-for="DataRetentionDays" class="text-danger"></span>
                                        <small class="form-text text-muted">Verilerinizin ne kadar süre saklanacağını belirler (30-365 gün).</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="AutoDeleteData" id="autoDeleteData">
                                            <label class="custom-control-label" for="autoDeleteData" asp-for="AutoDeleteData"></label>
                                        </div>
                                        <small class="form-text text-muted">Belirlenen süre sonunda verilerinizi otomatik olarak silin.</small>
                                    </div>
                                    
                                    <h5 class="mt-4">Güvenlik</h5>
                                    <hr>
                                    
                                    <div class="form-group">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" asp-for="TwoFactorEnabled" id="twoFactorEnabled">
                                            <label class="custom-control-label" for="twoFactorEnabled" asp-for="TwoFactorEnabled"></label>
                                        </div>
                                        <small class="form-text text-muted">Hesabınızın güvenliği için iki faktörlü kimlik doğrulamayı etkinleştirin.</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label asp-for="SessionTimeoutMinutes"></label>
                                        <select asp-for="SessionTimeoutMinutes" class="form-control">
                                            <option value="15">15 Dakika</option>
                                            <option value="30">30 Dakika</option>
                                            <option value="60">1 Saat</option>
                                            <option value="120">2 Saat</option>
                                            <option value="240">4 Saat</option>
                                            <option value="480">8 Saat</option>
                                        </select>
                                        <small class="form-text text-muted">Oturum zaman aşımı süresini belirler.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a href="@Url.Action("Index", "Settings")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
                
                <!-- Veri İşlemleri -->
                <div class="card card-warning mt-3">
                    <div class="card-header">
                        <h3 class="card-title">Veri İşlemleri</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Veri Dışa Aktarma</h6>
                                <p class="text-muted">Tüm verilerinizi JSON formatında indirin.</p>
                                <form asp-action="ExportData" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-info btn-sm">
                                        <i class="fas fa-download"></i> Verileri Dışa Aktar
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <h6>Hesap Silme</h6>
                                <p class="text-muted">Hesabınızı ve tüm verilerinizi kalıcı olarak silin.</p>
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteAccountModal">
                                    <i class="fas fa-trash"></i> Hesabı Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Gizlilik Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Profil Görünürlüğü:</strong></p>
                        <ul>
                            <li><strong>Özel:</strong> Sadece siz görebilirsiniz</li>
                            <li><strong>Takım:</strong> Takım üyeleri görebilir</li>
                            <li><strong>Organizasyon:</strong> Tüm organizasyon görebilir</li>
                            <li><strong>Herkese Açık:</strong> Herkes görebilir</li>
                        </ul>
                        
                        <p class="mt-3"><strong>Veri Güvenliği:</strong></p>
                        <ul>
                            <li>Verileriniz şifrelenerek saklanır</li>
                            <li>Üçüncü taraflarla paylaşılmaz</li>
                            <li>İstediğiniz zaman silebilirsiniz</li>
                        </ul>
                        
                        <p class="mt-3"><strong>İki Faktörlü Kimlik Doğrulama:</strong></p>
                        <p class="text-muted">Hesabınızın güvenliği için şiddetle önerilir. SMS veya authenticator uygulaması kullanabilirsiniz.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hesap Silme Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" role="dialog" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" id="deleteAccountModalLabel">Hesap Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="DeleteAccount" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <h6><i class="icon fas fa-exclamation-triangle"></i> Dikkat!</h6>
                        Bu işlem geri alınamaz. Hesabınız ve tüm verileriniz kalıcı olarak silinecektir.
                    </div>
                    
                    <p>Hesabınızı silmek için şifrenizi girin:</p>
                    <div class="form-group">
                        <label for="confirmPassword">Şifre:</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    </div>
                    
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="confirmDelete" required>
                            <label class="custom-control-label" for="confirmDelete">
                                Hesabımı silmek istediğimi onaylıyorum
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Hesabı Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>